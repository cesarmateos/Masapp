<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/naranja"/>
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomRightRadius="30dp"
                android:bottomLeftRadius="30dp"/>
            <size
                android:width="110dp"
                android:height="40dp" />
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">

            <stroke
                android:color="@color/black"
                android:width="2dp"
                />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomRightRadius="30dp"
                android:bottomLeftRadius="30dp"/>
            <size
                android:width="110dp"
                android:height="40dp" />

        </shape>
    </item>


    <item android:right="80dp" android:left="4dp" android:top="4dp" android:bottom="4dp">

        <shape android:shape="oval">
            <gradient
                android:type = "radial"
                android:centerY="1"
                android:gradientRadius="35dp"
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#b0b3b5"  />
            <size
                android:width="34dp"
                android:height="34dp" />
        </shape>
    </item>
</layer-list>